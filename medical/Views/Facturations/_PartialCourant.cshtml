@model IEnumerable<medical.Model.ViewModel.EtatCourant>

@{
    ViewBag.Title = "Index";
}


 <div class="card-body">
        @if (Model.Count() == 0)
        {
            <div class="alert alert-info">Aucune Facturation Aujourd'hui</div>
        }
        else
        {
            <div class="table-responsive">
                <table class="table table-bordered"  width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th>
                                Examen
                            </th>
                            <th>
                                Solde en CDF
                            </th>
                            <th>
                                Solde en USD
                            </th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <strong>@Html.DisplayFor(modelItem => item.CompteS)</strong>
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.PaiementSomme)
                                </td>
                                <td>
                                    @(item.PaiementSomme / 2000) $
                                </td>
                            </tr>
                        }
                        <tr>
                            <td><h6 style="color:red;"><strong>Total Général</strong> </h6></td>
                            <td><h6 style="color:red;">@Model.Sum(i => i.PaiementSomme) </h6></td>
                            <td><h6 style="color:red;">@Model.Sum(i => i.PaiementSomme / 2000) </h6></td>
                        </tr>

                    </tbody>
                </table>
            </div>
        }

    </div>

