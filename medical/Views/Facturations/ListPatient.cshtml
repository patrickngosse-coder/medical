@model IEnumerable<medical.Model.Models.Facturation>

@{
    ViewBag.Title = "ListPatient";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
    <div class="card shadow ">
        <div class="card-header">
            <h6 class="m-0 font-weight-bold text-success"> Liste Patients</h6>'
          
        </div>
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                    <thead>
                        <tr>
                            <th></th>
                            <th>
                                @Html.DisplayNameFor(model => model.NOMPATIENT)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.AGE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.SEXE)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CATEGORIE)
                            </th>

                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <img src="~/Content/facebook-avatar.png" height="45" width="45" />
                                </td>

                                <td>
                                    @Html.DisplayFor(modelItem => item.NOMPATIENT)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.AGE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.SEXE)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.CATEGORIE)
                                </td>

                                <td>

                                    @Html.ActionLink("Details", "Details", new { id = item.IDFACTURATION })
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>