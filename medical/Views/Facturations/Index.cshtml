@model IEnumerable<medical.Model.Models.Facturation>

@{
    ViewBag.Title = "Index";
}


<!-- Page Heading -->
    <div class="card-header py-3 ">
        <a href="" onclick="CreateFacturations()" data-toggle="modal" data-target="#createFacturations"  class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Ajouter Nouveau
        </a>
      
        <a href="#" onclick="" data-toggle="modal" data-target="#createExamen" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
            <i class="fas fa-print fa-sm text-white-50"></i> Imprimer
        </a>
    </div>
<div class="row">

    <!-- Content Column -->
    <div class="col-lg-6 mb-4">

        <!-- Approach -->
        <div class="card shadow mb-4">
            <div class="card-header py-3">
                <h6 class="m-0 font-weight-bold text-primary">Opération(s) de @DateTime.Today</h6>
            </div>
            <div class="card-body">
                @{ Html.RenderAction("EtatCourant", "Facturations"); }
            </div>
        </div>

    </div>

    <div class="col-lg-6 mb-4">

        <!-- Illustrations -->
        @*<div class="card shadow mb-4">
