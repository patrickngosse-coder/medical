@model medical.Model.Models.Compterendu

@{
    ViewBag.Title = "Create";
}

@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
       
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group row">
            <text class="control-label col-md-2">Rapport</text>
            <div class="col-md-10">
                @Html.EditorFor(model => model.RAPPORT, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.RAPPORT, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <text class="control-label col-md-2">Réf. Acte Médical</text>
            <div class="col-md-10">
                @Html.DropDownList("IDACTMEDICO", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDACTMEDICO, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <text class = "control-label col-md-2" >Réf. Acte Infirmier</text>
            <div class="col-md-10">
                @Html.DropDownList("IDACTEINFIRMIER", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.IDACTEINFIRMIER, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <text class="control-label col-md-2">Réf. Examen</text>
            <div class="col-md-10">
                @Html.DropDownList("EXAMENID", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.EXAMENID, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group row">
            <text class="control-label col-md-2">Maladie</text>
            <div class="col-md-10">
                @Html.EditorFor(model => model.PATHOLOGIE, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.PATHOLOGIE, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="modal-footer">
            <button class="btn btn-secondary" type="button" data-dismiss="modal">Annuler</button>
            <input class="btn btn-primary" type="submit" value="Enregistrer" />
        </div>
    </div>
}
