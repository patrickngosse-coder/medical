@model IEnumerable<medical.Model.Models.Patient>


@if (Model.Count() == 0)
{
    <div class="alert alert-info">Aucun Patient trouvé</div>
}
<div style="max-height:300px;overflow-y:auto;" id="grouplistcontainer">
    @foreach (var item in Model)
    {
    <div>
        <div>@Html.ActionLink(item.NomComplet, "Index", "Patients", new { id = item.ID_PATIENT }, null)</div>
        <div><small>Téléphone:  @item.TEL.ToString() </small></div>
        <div><small>Adresse:  @item.ADRESSSE.ToString() </small></div>
    </div>
        <hr style="margin:23px 0px 0px 0px;" />
    }
</div>

