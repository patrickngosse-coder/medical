@model IEnumerable<medical.Model.Models.Patient>

@{
    ViewBag.Title = "Index";
}
    <div class="card-header py-3">
        <a href="#" onclick="CreatePatients()" data-toggle="modal" data-target="#createPatients" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Ajouter Nouveau
        </a>
      
        <a href="#" onclick="" data-toggle="modal" data-target="#createExamen" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
            <i class="fas fa-print fa-sm text-white-50"></i> Imprimer
        </a>
    </div>
    <div class="row">
      
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-danger text-white shadow">
                <div class="card-body">
                    Sexe
                    <div class="text-white-50 small">@Model.Select(i=>i.SEXE).Count()</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-secondary text-white shadow">
                <div class="card-body">
                    Etat-Civil
                    <div class="text-white-50 small">@Model.Select(i => i.ETATCIVIL).Count()</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-light text-black shadow">
                <div class="card-body">
                    Light
                    <div class="text-black-50 small">#f8f9fc</div>
                </div>
            </div>
        </div>
        <div class="col-xl-3 col-md-6 mb-4">
            <div class="card bg-dark text-white shadow">
                <div class="card-body">
                    Dark
                    <div class="text-white-50 small">#5a5c69</div>
                </div>
            </div>
        </div>
    </div>
<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Patients</h6>
        <br />
        @using (Html.BeginForm("ExportData", "Patients", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <button class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm" type="submit"> <i class="fas fa-file-excel fa-sm text-white-50"></i> Exporter Excel</button>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.NOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.POSTNOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PRENOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SEXE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.LIEUNAISSANCE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.DATENAISSANCE)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ETATCIVIL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.TEL)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.ADRESSSE)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.NOM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.POSTNOM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PRENOM)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.SEXE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.LIEUNAISSANCE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.DATENAISSANCE)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ETATCIVIL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.TEL)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.ADRESSSE)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDPATIENT }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IDPATIENT }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDPATIENT })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
