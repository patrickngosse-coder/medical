<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Médecin Démandeurs</h6>
        <br />
        @Html.ActionLink("Excel ", "Reports", new { ReportType = "Excel" })|
        @Html.ActionLink(" Word ", "Reports", new { ReportType = "Word" })|
        @Html.ActionLink(" PDF ", "Reports", new { ReportType = "PDF" })|
        @Html.ActionLink(" Image", "Reports", new { ReportType = "Image" })
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered table-striped" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th></th>
                        <th>
                            @Html.DisplayNameFor(model => model.NOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.POSTNOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PRENOM)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.SEXE)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>
                            <img src="~/Content/facebook-avatar.png" height="45" width="45" />
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.NOM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.POSTNOM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PRENOM)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.SEXE)
                        </td>
                        <td>
                            @Html.ActionLink("Edit", "Edit", new { id = item.IDDEMANDEUR }) |
                            @Html.ActionLink("Details", "Details", new { id = item.IDDEMANDEUR }) |
                            @Html.ActionLink("Delete", "Delete", new { id = item.IDDEMANDEUR })
                        </td>
                    </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>


