@model IEnumerable<medical.Model.Models.Hospitalisation>

@{
    ViewBag.Title = "Index";
}
    <div class="card-header py-3">
        <!-- Page Heading -->
        <a href="#" onclick="CreateHospitalisations()" data-toggle="modal" data-target="#createHospitalisations" class="d-none d-sm-inline-block btn btn-sm btn-primary shadow-sm">
            <i class="fas fa-download fa-sm text-white-50"></i> Ajouter Nouveau
        </a>
       
        <a href="#" onclick="" data-toggle="modal" data-target="#createExamen" class="d-none d-sm-inline-block btn btn-sm btn-warning shadow-sm">
            <i class="fas fa-print fa-sm text-white-50"></i> Imprimer
        </a>
    </div>

<!-- DataTales Example -->
<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Hospitalisations</h6>
        <br />
        @using (Html.BeginForm("ExportData", "Hospitalisations", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            <button class="d-none d-sm-inline-block btn btn-sm btn-success shadow-sm" type="submit"> <i class="fas fa-file-excel fa-sm text-white-50"></i> Exporter Excel</button>
        }
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.Pavillon.DESIGNATION)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.IDPATIENT)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.NBRJOUR)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.PRIXUNITAIRE)
                        </th>
                        <th></th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.Pavillon.DESIGNATION)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.IDPATIENT)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.NBRJOUR)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.PRIXUNITAIRE)
                            </td>
                            <td>
                                @Html.ActionLink("Edit", "Edit", new { id = item.IDHOSPI }) |
                                @Html.ActionLink("Details", "Details", new { id = item.IDHOSPI }) |
                                @Html.ActionLink("Delete", "Delete", new { id = item.IDHOSPI })
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
