@model medical.Model.Models.MedecinViewModel
@{
    ViewBag.Title = "Medecin";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1 style="color:transparent">@ViewBag.Title.</h1>

@using (Html.BeginForm("Medecin", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()

    @Html.ValidationSummary("", new { @class = "text-danger" })

    <div class="card o-hidden border-0 shadow-lg my-5">
        <div class="card-body p-0">
            <!-- Nested Row within Card Body -->
            <div class="row">
                <div class="col-lg-5 d-none d-lg-block bg-register-image"></div>
                <div class="col-lg-7">
                    <div class="p-5">
                        <div class="text-center">
                            <h1 class="h4 text-gray-900 mb-4">Créer un compte Medecin!</h1>
                        </div>
                        <form class="user">
                            <div class="form-group row">
                                <div class="col-sm-4 mb-3 mb-sm-0">

                                    @Html.TextBoxFor(m => m.NOM, new
                                    {
                                        type = "text",
                                        @class = "form-control form-control-user",
                                        id = "exampleFirstName",
                                           placeholder = "Nom..."
                                    })
                                    @Html.ValidationMessageFor(model => model.NOM, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.POSTNOM, new
                                    {
                                        type = "text",
                                        @class = "form-control form-control-user",
                                        id = "exampleFirstName",
                                           placeholder = "Postnom..."
                                    })
                                    @Html.ValidationMessageFor(model => model.POSTNOM, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-4">
                                    @Html.TextBoxFor(m => m.PRENOM, new
                                    {
                                        type = "text",
                                        @class = "form-control form-control-user",
                                        id = "exampleFirstName",
                                           placeholder = "Prénom..."
                                    })
                                    @Html.ValidationMessageFor(model => model.PRENOM, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="form-group">
                                @Html.EnumDropDownListFor(model => model.SEXE, "Choisir Genre..", htmlAttributes: new
                               {
                                   @class = "form-control form-control-user"
                               })
                            </div>
                            <div class="form-group">
                                @Html.TextBoxFor(m => m.Email, new
                                   {
                                       type = "email",
                                       @class = "form-control form-control-user",
                                       id = "exampleInputEmail",
                                          placeholder = "Adresse Email..."
                                   })
                                @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                            </div>
                            <div class="form-group row">
                                <div class="col-sm-6 mb-3 mb-sm-0">

                                    @Html.PasswordFor(m => m.Password, new
                                   {
                                       type = "password",
                                       @class = "form-control form-control-user",
                                       id = "exampleInputPassword",
                                       placeholder = "Mot de Passe"
                                   })
                                    @Html.ValidationMessageFor(model => model.Password, "", new { @class = "text-danger" })
                                </div>
                                <div class="col-sm-6">

                                    @Html.PasswordFor(m => m.ConfirmPassword, new
                                   {
                                       type = "password",
                                       @class = "form-control form-control-user",
                                       id = "exampleRepeatPassword",
                                       placeholder = "Confirmer Mot de passe"
                                   })
                                    @Html.ValidationMessageFor(model => model.ConfirmPassword, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <input type="submit" class="btn btn-primary btn-user btn-block" value="S'enregistrer" />
                        </form>
                        <hr>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("ForgotPassword", "Account")">Mot de Passe oublié?</a>
                        </div>
                        <div class="text-center">
                            <a class="small" href="@Url.Action("Login","Account")">Avez-vous déjà un compte? Connexion!</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

